<h2>List of ratings</h2>

<ul>
  <% @ratings.each do |rating| %>
    <li>
      <%= render rating %>
      <%= button_to 'delete', 
            rating, 
            method: :delete, 
            form: { 
              data: { 
                turbo_confirm: "Are you sure you want delete?"
              }
            } %> 
    </li>
  <% end %>
</ul>

<%= link_to "New rating", new_rating_path %>
